<h1>Transaction History</h1>

<% if @transactions.any? %>
  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Stock</th>
        <th>Type</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
          <td><%= transaction.stock.symbol %></td>
          <td><%= transaction.transaction_type.capitalize %></td>
          <td><%= transaction.quantity %></td>
          <td>$<%= number_with_precision(transaction.price, precision: 2) %></td>
          <td>$<%= number_with_precision(transaction.quantity * transaction.price, precision: 2) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No transactions yet.</p>
<% end %>

